{% extends 'layout/base.twig' %}

{% block title %}
    All users
{% endblock %}

{% block content %}
    <div class="table-responsive mt-5">
        <p class="h5 mb-5 pl-1">Total users: {{ totalUsers }}</p>
        <form id="delete-all" class="table-form" action="/users/delete" method="POST"></form>
        <button form="delete-all" class="btn btn-danger delete-all-btn" type="submit">Delete All</button>
            <table class="table table-hover">
                <thead class="thead-light">
                <tr>
                    <th><input class="check-all" type="checkbox"></th>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Status</th>
                    <th>Update</th>
                    <th>Remove</th>
                </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td><input class="table-checkbox" type="checkbox" name="ids[]" value="{{ user['id'] }}" form="delete-all"></td>
                            <td>{{ user['id'] }}</td>
                            <td>{{ user['name'] }}</td>
                            <td>{{ user['email'] }}</td>
                            <td>{{ user['gender'] }}</td>
                            <td>{{ user['status'] }}</td>
                            <td>
                                <a class="btn btn-primary" href="/users/edit/{{ user['id'] }}">Update</a>
                            </td>
                            <td>
                                <form data-id="{{ user['id'] }}" id="delete" method="POST"
                                      action="/users/{{ user['id'] }}">
                                    <button data-id="{{ user['id'] }}" type="submit" class="btn btn-danger delete-btn">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        <nav aria-label="Pagination">
            <ul class="pagination justify-content-center">
                {% for i in 1..totalPages %}
                    <li class="page-item" data-page="{{ i }}">
                        <a class="page-link" href="?page={{ i }}">{{ i }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
{% endblock %}
{% block javascript %}
<script src="../../assets/js/main.js"></script>
{% endblock %}